{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install",
            "type": "shell",
            "command": "cargo install mdbook && cargo install mdbook-toc && cargo install mdbook-linkcheck",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "mdbook build",
            "problemMatcher": []
        },
        {
            "label": "Serve",
            "type": "shell",
            "command": "mdbook serve",
            "problemMatcher": []
        },
        {
            "label": "Create ADR",
            "type": "shell",
            "command": "adr new ${input:adrTitle}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "adrTitle",
            "description": "The title of the ADR to be created",
            "default": "My ADR title",
            "type": "promptString"
        }
    ]
}